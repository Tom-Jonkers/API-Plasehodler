@model IEnumerable<Super_Cartes_Infinies.Models.StartingCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Cartes de départ</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Attaque
            </th>
            <th>
                Point de vie
            </th>
            <th>
                Coût
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Card.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Card.Attack)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Card.Health)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Card.Cost)
                </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.Card.ImageUrl)" height="150px" />
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
